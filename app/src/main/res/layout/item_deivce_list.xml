<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingRight="-91dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_drive_eta_black_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_deivce_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="namde"
                />
            <TextView
                android:id="@+id/tv_deivce_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="12345566777" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_is_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:text="ddddd" />


        <Button
            android:id="@+id/btn_go_control"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_go_right_black_24dp"/>
        
        <RelativeLayout
            android:id="@+id/ll_right_unbind_device"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@color/color_red">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/str_unbind"
                android:textSize="20sp"
                />
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>